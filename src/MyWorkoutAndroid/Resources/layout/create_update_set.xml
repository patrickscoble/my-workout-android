<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/FormRow">

        <TextView
            android:id="@+id/create_update_set_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:text="@string/create_update_set_number" 
            style="@style/FormLabel" />

        <EditText
            android:id="@+id/create_update_set_number"
            android:inputType="number"
            style="@style/FormInput" />

    </RelativeLayout>

    <TextView
        android:text="@string/create_update_set_scores"
        android:textSize="24dp"
        android:textStyle="bold"
        style="@style/FormLabel" />

    <RelativeLayout
        style="@style/FormRow">

        <TextView
            android:id="@+id/create_update_set_player_one"
            android:text="@string/create_update_set_player_one_score" 
            style="@style/FormLabel" />

        <EditText
            android:id="@+id/create_update_set_player_one_score"
            android:inputType="numberSigned"
            style="@style/FormInput" />

    </RelativeLayout>

    <RelativeLayout
        style="@style/FormRow">

        <TextView
            android:id="@+id/create_update_set_player_two"
            android:text="@string/create_update_set_player_two_score" 
            style="@style/FormLabel" />

        <EditText
            android:id="@+id/create_update_set_player_two_score"
            android:inputType="numberSigned"
            style="@style/FormInput" />

    </RelativeLayout>

</LinearLayout>
