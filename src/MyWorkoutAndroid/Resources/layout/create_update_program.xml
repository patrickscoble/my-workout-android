<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/FormRow">

        <TextView
            android:id="@+id/create_update_program_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:text="@string/create_update_program_name" 
            style="@style/FormLabel" />

        <EditText
            android:id="@+id/create_update_program_name"
            android:inputType="textCapWords"
            style="@style/FormInput" />

    </RelativeLayout>

    <RelativeLayout
        style="@style/FormRow">

        <TextView
            android:text="@string/create_update_program_duration_in_weeks" 
            style="@style/FormLabel" />

        <EditText
            android:id="@+id/create_update_program_duration_in_weeks"
            android:layout_width="112dp"
            android:inputType="text"
            style="@style/FormInput" />

    </RelativeLayout>

    <RelativeLayout
        style="@style/FormRow">

        <TextView
            android:text="@string/create_update_program_frequency_per_week" 
            style="@style/FormLabel" />

        <EditText
            android:id="@+id/create_update_program_frequency_per_week"
            android:layout_width="112dp"
            android:inputType="text"
            style="@style/FormInput" />

    </RelativeLayout>

</LinearLayout>
