<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/FormRow">

        <TextView
            android:id="@+id/create_update_round_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:text="@string/create_update_round_description" 
            style="@style/FormLabel" />

        <EditText
            android:id="@+id/create_update_round_description"
            android:inputType="textCapWords"
            style="@style/FormInput" />

    </RelativeLayout>

    <RelativeLayout
        style="@style/FormRow">

        <TextView
            android:text="@string/create_update_round_date" 
            style="@style/FormLabel" />

        <EditText
            android:id="@+id/create_update_round_date"
            android:inputType="date"
            style="@style/FormInput" />

    </RelativeLayout>

    <RelativeLayout
        style="@style/FormRow">

        <TextView
            android:text="@string/create_update_round_player_one" 
            style="@style/FormLabel" />

        <EditText
            android:id="@+id/create_update_round_player_one"
            android:inputType="textCapWords"
            style="@style/FormInput" />

    </RelativeLayout>

    <RelativeLayout
        style="@style/FormRow">

        <TextView
            android:text="@string/create_update_round_player_two" 
            style="@style/FormLabel" />

        <EditText
            android:id="@+id/create_update_round_player_two"
            android:inputType="textCapWords"
            style="@style/FormInput" />

    </RelativeLayout>

</LinearLayout>
