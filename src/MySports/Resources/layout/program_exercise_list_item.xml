<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/program_exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/program_exercise_name"
            android:textSize="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
           
        <TextView
            android:id="@+id/program_exercise_sets_repetitions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/program_exercise_sets_repetitions"
            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/program_exercise_rest_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="8dp"
        android:text="@string/program_exercise_rest_period"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>
